datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           Int    @id @default(autoincrement())
  name         String
  email        String @unique
  passwordHash String
  tasks        Task[]
}

model Task {
  id          Int       @id @default(autoincrement())
  title       String    @unique
  description String?
  status      String
  category    String?
  createdAt   DateTime  @default(now())
  completedAt DateTime?
  userId      Int
  user        User      @relation(fields: [userId], references: [id])
}
